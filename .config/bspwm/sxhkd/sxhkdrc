#Scrot
#Save to clipboard
super + shift + s
    scrot -s --line mode=edge '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'
#Save to Screenshots folder
Print
    scrot -s --line mode=edge ~/Pictures/Screenshots/'%Y-%m-%d-_%H%M%S_$wx$h_screenshot.png'

