#Focus last window
alt + Tab
	bspc node -f last

#Focus selected desktop
alt + shift + Tab
	bspc desktop -f '^{1-9,10}'

#Rotate desktop
    # alt + space
    # 	bspc node @/ --rotate {90,-90}
ctrl + alt + {Left,Right,Up,Down}
    xrandr -o {left,right,normal,inverted}


